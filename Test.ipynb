print("\n--- Info zum Datensatz (Datentypen) ---")
df.info()

# ID-Spalten (werden nicht analysiert, sondern zum Identifizieren)
id_cols = ["Entity", "Code", "Year"]

# alle anderen Spalten sind Messwerte (Anteile der Todesursachen)
value_cols = [c for c in df.columns if c not in id_cols]

print("\nID-Spalten:", id_cols)
print("Anzahl Mess-Spalten:", len(value_cols))
print("Beispiel-Mess-Spalten:", value_cols[:5])

# Long-Format erstellen: jede Zeile = Land, Jahr, Ursache, Anteil
df_long = df.melt(
    id_vars=id_cols,
    value_vars=value_cols,
    var_name="Cause",
    value_name="Share_of_deaths"
)

print("\nForm des Datensatzes im Long-Format:", df_long.shape)
