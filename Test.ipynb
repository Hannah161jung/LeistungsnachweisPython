# ============================================================
# 1. Bibliotheken laden
# ============================================================

import pandas as pd
from matplotlib import pyplot as plt


# ============================================================
# 2. Daten laden
# ============================================================

# CSV-Datei einlesen (kompletter Datensatz mit allen Spalten)
df = pd.read_csv("share-of-deaths-from-major-causes.csv")

# Form und erste Zeilen anzeigen
print("Form des ursprünglichen Datensatzes (Zeilen, Spalten):")
print(df.shape)
print("\nErste 5 Zeilen:")
print(df.head())


# ============================================================
# 3. Datentypen und fehlende Werte prüfen
# ============================================================

print("\nDatentypen der Spalten:")
print(df.dtypes)

print("\nAnzahl fehlender Werte pro Spalte:")
print(df.isna().sum())


# ============================================================
# 4. Spaltennamen verkürzen (ausgewählte Todesursachen)
# ============================================================

rename_dict = {
    "Share of total deaths in both sexes in those aged all ages that are from digestive diseases": "digestive",
    "Share of total deaths in both sexes in those aged all ages that are from infectious and parasitic diseases": "infectious",
    "Share of total deaths in both sexes in those aged all ages that are from respiratory diseases": "respiratory",
    "Share of total deaths in both sexes in those aged all ages that are from diabetes mellitus, blood and endocrine disorders": "diabetes_blood_endocrine",
    "Share of total deaths in both sexes in those aged all ages that are from unintentional injuries": "unintentional_injuries",
    "Share of total deaths in both sexes in those aged all ages that are from genitourinary diseases": "genitourinary"
}

df = df.rename(columns=rename_dict)

print("\nKontrolle: Wichtige Spalten nach dem Umbenennen:")
print(df[["Entity", "Code", "Year"] + list(rename_dict.values())].head())


# ============================================================
# 5. Zeitraum und Länder einschränken (ab 1990, CH & TR)
# ============================================================

df = df[df["Year"] >= 1990]

countries_of_interest = ["Switzerland", "Turkey"]
df_sub = df[df["Entity"].isin(countries_of_interest)]

print("\nForm des gefilterten Datensatzes (nur Schweiz und Türkei, ab 1990):")
print(df_sub.shape)

print("\nAnzahl Beobachtungen pro Land:")
print(df_sub.groupby("Entity").size())

print("\nFrühestes und letztes Jahr im gefilterten Datensatz:")
print("Min Year:", df_sub["Year"].min())
print("Max Year:", df_sub["Year"].max())


# ============================================================
# 6. Relevante Todesursachen-Spalten definieren
# ============================================================

cause_cols = [
    "digestive",
    "infectious",
    "respiratory",
    "diabetes_blood_endocrine",
    "unintentional_injuries",
    "genitourinary"
]

print("\nFehlende Werte in den ausgewählten Todesursachen-Spalten:")
print(df_sub[cause_cols].isna().sum())


# ============================================================
# 7. Datensatz ins Long-Format bringen
# ============================================================

df_long = df_sub.melt(
    id_vars=["Entity", "Code", "Year"],
    value_vars=cause_cols,
    var_name="cause",
    value_name="share"
)

print("\nForm des Long-Format-Datensatzes:")
print(df_long.shape)

print("\nErste 5 Zeilen von df_long:")
print(df_long.head())


# ============================================================
# 8. Deskriptive Statistik
# ============================================================

print("\nBeschreibende Statistik der ausgewählten Todesursachen:")
print(df_sub[cause_cols].describe())


# ============================================================
# 9. Histogramme: Verteilung von 'infectious' und 'respiratory'
# ============================================================

plt.figure()
df_sub["infectious"].hist(bins=20)
plt.title("Verteilung: Anteil der Todesfälle durch Infektionskrankheiten")
plt.xlabel("Anteil der Todesfälle (%)")
plt.ylabel("Häufigkeit")
plt.grid(True)
plt.show()

plt.figure()
df_sub["respiratory"].hist(bins=20)
plt.title("Verteilung: Anteil der Todesfälle durch Atemwegserkrankungen")
plt.xlabel("Anteil der Todesfälle (%)")
plt.ylabel("Häufigkeit")
plt.grid(True)
plt.show()


# ============================================================
# 10. Boxplot über mehrere Todesursachen
# ============================================================

plt.figure()
df_sub[cause_cols].boxplot()
plt.title("Boxplot der Anteile ausgewählter Todesursachen")
plt.ylabel("Anteil der Todesfälle (%)")
plt.xticks(rotation=45)
plt.grid(True, axis="y")
plt.show()


# ============================================================
# 11. Korrelation der ausgewählten Todesursachen
# ============================================================

corr_matrix = df_sub[cause_cols].corr()
print("\nKorrelationsmatrix der ausgewählten Todesursachen:")
print(corr_matrix)


# ============================================================
# 12. Streudiagramm: infectious vs. respiratory
# ============================================================

plt.figure()
plt.scatter(df_sub["infectious"], df_sub["respiratory"])
plt.title("Zusammenhang: Infektions- vs. Atemwegserkrankungen")
plt.xlabel("Anteil Todesfälle durch Infektionskrankheiten (%)")
plt.ylabel("Anteil Todesfälle durch Atemwegserkrankungen (%)")
plt.grid(True)
plt.show()


# ============================================================
# 13. Zeitverlauf: Infektionskrankheiten in CH und TR
# ============================================================

plt.figure()
for country in countries_of_interest:
    subset_country = df_sub[df_sub["Entity"] == country]
    plt.plot(
        subset_country["Year"],
        subset_country["infectious"],
        marker="o",
        linestyle="-",
        label=country
    )

plt.title("Anteil der Todesfälle durch Infektionskrankheiten (1990–)")
plt.xlabel("Jahr")
plt.ylabel("Anteil der Todesfälle (%)")
plt.legend()
plt.grid(True)
plt.show()


# ============================================================
# 14. Zeitverlauf: Atemwegserkrankungen in CH und TR
# ============================================================

plt.figure()
for country in countries_of_interest:
    subset_country = df_sub[df_sub["Entity"] == country]
    plt.plot(
        subset_country["Year"],
        subset_country["respiratory"],
        marker="o",
        linestyle="-",
        label=country
    )

plt.title("Anteil der Todesfälle durch Atemwegserkrankungen (1990–)")
plt.xlabel("Jahr")
plt.ylabel("Anteil der Todesfälle (%)")
plt.legend()
plt.grid(True)
plt.show()


# ============================================================
# 15. Zeitverlauf: alle Ursachen (Beispiel Schweiz)
# ============================================================

country_example = "Switzerland"
subset_long_ch = df_long[df_long["Entity"] == country_example]

plt.figure()
for cause in cause_cols:
    subset_cause = subset_long_ch[subset_long_ch["cause"] == cause]
    plt.plot(
        subset_cause["Year"],
        subset_cause["share"],
        marker="o",
        linestyle="-",
        label=cause
    )

plt.title(f"Anteil der Todesfälle nach Todesursache in {country_example}")
plt.xlabel("Jahr")
plt.ylabel("Anteil der Todesfälle (%)")
plt.legend()
plt.grid(True)
plt.show()
