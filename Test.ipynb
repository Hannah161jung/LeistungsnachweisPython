# ============================================
# 0. Vorbereitung: Bibliotheken laden
# ============================================

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from IPython.display import display

# Optional: Darstellungsoptionen für Pandas
pd.set_option("display.max_columns", None)
pd.set_option("display.width", 150)

# ============================================
# 1. Daten laden
# ============================================

# WICHTIG:
# Lege die Datei "share-of-deaths-from-major-causes.csv"
# in denselben Ordner wie dieses Notebook.
csv_path = "share-of-deaths-from-major-causes.csv"

df = pd.read_csv(csv_path)

print("Form des Datensatzes (Zeilen, Spalten):", df.shape)
print("\nErste 5 Zeilen:")
display(df.head())

print("\nSpaltennamen:")
for col in df.columns:
    print("-", col)

# ============================================
# 2. Daten vorbereiten
# ============================================

# Grundstruktur prüfen
print("\n--- Info zum Datensatz (Datentypen etc.) ---")
df_info = df.info()

# ID-Spalten und Mess-Spalten bestimmen
id_cols = ["Entity", "Code", "Year"]
value_cols = [c for c in df.columns if c not in id_cols]

print("\nID-Spalten:", id_cols)
print("\nAnzahl Mess-Spalten:", len(value_cols))
print("Beispiel-Mess-Spalten:", value_cols[:5])

# Long-Format erzeugen (für viele Auswertungen praktischer)
df_long = df.melt(
    id_vars=id_cols,
    value_vars=value_cols,
    var_name="Cause",
    value_name="Share_of_deaths"
)

print("\nForm des Datensatzes im Long-Format:", df_long.shape)
print("\nBeispiel aus df_long:")
display(df_long.head())

print("\nDatentypen im Long-Format:")
print(df_long.dtypes)

# ============================================
# 3. Statistik der Rohdaten (Analyse im Long-Format)
# ============================================

# 3.1 Grundlegende Beschreibende Statistik
print("\n--- Beschreibende Statistik der numerischen Spalten (Wide-Format) ---")
display(df.describe().T)

print("\n--- Beschreibende Statistik der numerischen Spalten (Long-Format, Share_of_deaths) ---")
display(df_long["Share_of_deaths"].describe())

# 3.2 Diskret / kontinuierlich & Klassenanzahl
print("\nAnzahl einzigartiger Länder (Entity):", df["Entity"].nunique())
print("Anzahl einzigartiger Ländercodes (Code):", df["Code"].nunique())
print("Anzahl unterschiedlicher Jahre (Year):", df["Year"].nunique())
print("Anzahl unterschiedlicher Todesursachen (Cause):", df_long["Cause"].nunique())

# 3.3 Fehlende Werte
missing_wide = df.isna().sum().sort_values(ascending=False)
print("\n--- Fehlende Werte (Wide-Format) ---")
display(missing_wide)

missing_long = df_long.isna().sum().sort_values(ascending=False)
print("\n--- Fehlende Werte (Long-Format) ---")
display(missing_long)

# 3.4 Beispiel: Anzahl Datenpunkte pro Ursache
points_per_cause = df_long.groupby("Cause")["Share_of_deaths"].count().sort_values(ascending=False)
print("\n--- Anzahl Datenpunkte pro Todesursache ---")
display(points_per_cause)

# 3.5 Histogramm der Anteile (Long-Format)
plt.figure(figsize=(8, 5))
plt.hist(df_long["Share_of_deaths"].dropna(), bins=30, edgecolor="black")
plt.title("Verteilung der Anteile an Todesfällen (alle Länder, alle Jahre)")
plt.xlabel("Anteil der Todesfälle [%]")
plt.ylabel("Häufigkeit")
plt.tight_layout()
plt.show()

# 3.6 Boxplot für ausgewählte Ursachen
# (Wir nehmen einfach die ersten 4 Mess-Spalten als Beispiel)
selected_causes = value_cols[:4]

df_box = df_long[df_long["Cause"].isin(selected_causes)]

plt.figure(figsize=(10, 6))
# Boxplot benötigt die Daten in Listenform je Kategorie
data_to_plot = [df_box.loc[df_box["Cause"] == c, "Share_of_deaths"].dropna() for c in selected_causes]
plt.boxplot(
    data_to_plot,
    labels=[c[:25] + "..." if len(c) > 25 else c for c in selected_causes],
    showfliers=False
)
plt.title("Boxplot der Anteile für ausgewählte Todesursachen (alle Länder, Jahre)")
plt.xlabel("Todesursache")
plt.ylabel("Anteil der Todesfälle [%]")
plt.xticks(rotation=20)
plt.tight_layout()
plt.show()

# 3.7 Säulendiagramm: Anzahl Datenpunkte pro Ursache (Top 10)
top_n = 10
top_causes_counts = points_per_cause.head(top_n)

plt.figure(figsize=(10, 5))
plt.barh(top_causes_counts.index, top_causes_counts.values)
plt.title(f"Anzahl Datenpunkte pro Todesursache (Top {top_n})")
plt.xlabel("Anzahl Datenpunkte")
plt.ylabel("Todesursache")
plt.tight_layout()
plt.show()

# 3.8 Streudiagramm & Korrelationsmatrix (Wide-Format)
# Wir nehmen einige numerische Spalten heraus (z.B. die ersten 5 Value-Spalten)
corr_cols = value_cols[:5]

# Streudiagramm zwischen den ersten beiden Spalten
x_col = corr_cols[0]
y_col = corr_cols[1]

plt.figure(figsize=(6, 5))
plt.scatter(df[x_col], df[y_col], alpha=0.5)
plt.title(f"Streudiagramm: {x_col[:30]}... vs. {y_col[:30]}...")
plt.xlabel(x_col)
plt.ylabel(y_col)
plt.tight_layout()
plt.show()

# Korrelationsmatrix
corr_matrix = df[corr_cols].corr()

plt.figure(figsize=(6, 5))
im = plt.imshow(corr_matrix, cmap="coolwarm", vmin=-1, vmax=1)
plt.colorbar(im, fraction=0.046, pad=0.04)
plt.xticks(
    ticks=np.arange(len(corr_cols)),
    labels=[c[:15] + "..." if len(c) > 15 else c for c in corr_cols],
    rotation=45,
    ha="right"
)
plt.yticks(
    ticks=np.arange(len(corr_cols)),
    labels=[c[:15] + "..." if len(c) > 15 else c for c in corr_cols]
)
plt.title("Korrelationsmatrix ausgewählter Todesursachen")
plt.tight_layout()
plt.show()

# ============================================
# 4. Analyse: Schweiz vs. Türkei (1990–2016)
# ============================================

# Länder und Zeitraum wählen
countries_of_interest = ["Switzerland", "Turkey"]
year_min = 1990
year_max = 2016

df_cty = df[
    df["Entity"].isin(countries_of_interest)
    & df["Year"].between(year_min, year_max)
].copy()

print("\nForm des gefilterten Datensatzes (Schweiz & Türkei, 1990–2016):", df_cty.shape)
display(df_cty.head())

# Long-Format für die beiden Länder
df_cty_long = df_long[
    (df_long["Entity"].isin(countries_of_interest))
    & (df_long["Year"].between(year_min, year_max))
].copy()

print("\nForm des Long-Formats (Schweiz & Türkei, 1990–2016):", df_cty_long.shape)
display(df_cty_long.head())

# 4.1 Anzahl Datenpunkte pro Land
points_per_country = df_cty["Entity"].value_counts()
print("\nAnzahl Datenpunkte pro Land (1990–2016):")
display(points_per_country)

plt.figure(figsize=(6, 4))
plt.bar(points_per_country.index, points_per_country.values)
plt.title("Anzahl Datenpunkte pro Land (1990–2016)")
plt.xlabel("Land")
plt.ylabel("Anzahl Datenpunkte")
plt.tight_layout()
plt.show()

# 4.2 Wichtigste Todesursachen (höchster mittlerer Anteil) für beide Länder zusammen
mean_by_cause_cty = df_cty_long.groupby("Cause")["Share_of_deaths"].mean().sort_values(ascending=False)

top_k = 5
top_causes = mean_by_cause_cty.head(top_k).index.tolist()
print(f"\nTop {top_k} Todesursachen nach durchschnittlichem Anteil (Schweiz & Türkei, 1990–2016):")
for c in top_causes:
    print("-", c)

# 4.3 Zeitlicher Verlauf der wichtigsten Ursachen für jedes Land
for cause in top_causes:
    plt.figure(figsize=(8, 5))
    for country in countries_of_interest:
        tmp = df_cty[df_cty["Entity"] == country].copy()
        tmp = tmp.sort_values("Year")
        plt.plot(tmp["Year"], tmp[cause], marker="o", label=country)
    plt.title(f"Entwicklung des Anteils: {cause}\n({year_min}–{year_max})")
    plt.xlabel("Jahr")
    plt.ylabel("Anteil der Todesfälle [%]")
    plt.xticks(sorted(df_cty["Year"].unique()), rotation=45)
    plt.legend()
    plt.tight_layout()
    plt.show()

# 4.4 Vergleich der mittleren Anteile (Balkendiagramm) für die Top-Ursachen
mean_cty_cause = (
    df_cty.groupby("Entity")[top_causes]
    .mean()
    .T  # Zeilen = Ursachen, Spalten = Länder
)

# Gruppiertes Balkendiagramm
x = np.arange(len(top_causes))
width = 0.35

plt.figure(figsize=(10, 6))
for i, country in enumerate(countries_of_interest):
    plt.bar(
        x + i * width,
        mean_cty_cause[country].values,
        width=width,
        label=country
    )

plt.xticks(
    x + width / 2,
    [c[:20] + "..." if len(c) > 20 else c for c in top_causes],
    rotation=20
)
plt.ylabel("Mittlerer Anteil der Todesfälle [%]")
plt.xlabel("Todesursache")
plt.title(f"Durchschnittliche Anteile der Todesursachen\nSchweiz vs. Türkei, {year_min}–{year_max}")
plt.legend()
plt.tight_layout()
plt.show()

# 4.5 Beispiel: Streudiagramm Schweiz vs. Türkei für eine Todesursache
example_cause = top_causes[0]
print("\nBeispielhafte Todesursache für ein Streudiagramm:", example_cause)

# Tabelle: pro Jahr der Wert Schweiz und Türkei
pivot_example = df_cty.pivot_table(
    index="Year",
    columns="Entity",
    values=example_cause
).dropna()  # nur Jahre mit Daten für beide Länder

plt.figure(figsize=(6, 5))
plt.scatter(
    pivot_example["Switzerland"],
    pivot_example["Turkey"]
)
for year, row in pivot_example.iterrows():
    plt.text(row["Switzerland"], row["Turkey"], str(year), fontsize=8)

plt.title(f"Vergleich Schweiz vs. Türkei für\n{example_cause}")
plt.xlabel("Anteil Schweiz [%]")
plt.ylabel("Anteil Türkei [%]")
plt.tight_layout()
plt.show()

