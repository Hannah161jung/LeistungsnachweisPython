# ============================================
# Leistungsausweis – Todesursachen Schweiz & Türkei (1990–2016)
# ============================================

# 1. Bibliotheken laden
import pandas as pd
import matplotlib.pyplot as plt

# Plots etwas schöner machen
plt.style.use("default")

# ============================================
# 2. Daten laden
# ============================================

# CSV muss im gleichen Ordner wie das Notebook liegen
csv_path = "share-of-deaths-from-major-causes.csv"

df = pd.read_csv(csv_path)

print("Form des ursprünglichen Datensatzes:", df.shape)
print("\nErste Zeilen des Datensatzes:")
display(df.head())

print("\nSpaltennamen:")
for i, col in enumerate(df.columns, start=1):
    print(f"{i:2d}. {col}")

# ============================================
# 3. Daten vorbereiten
# ============================================

# Länder und Zeitraum auswählen
countries_of_interest = ["Switzerland", "Turkey"]

df_cty = df[df["Entity"].isin(countries_of_interest)].copy()
df_cty = df_cty[df_cty["Year"].between(1990, 2016)]

print("\nForm nach Filter (nur Schweiz & Türkei, 1990–2016):", df_cty.shape)
print(df_cty[["Entity", "Code", "Year"]].drop_duplicates().head())

# ID- und Ursachen-Spalten bestimmen
id_cols = ["Entity", "Code", "Year"]
cause_cols = [c for c in df_cty.columns if c not in id_cols]

print("\nAnzahl Todesursachen-Spalten:", len(cause_cols))

# Wide -> Long (für saubere Auswertungen)
df_cty_long = df_cty.melt(
    id_vars=id_cols,
    value_vars=cause_cols,
    var_name="Cause",
    value_name="Share_of_deaths",
)

# Funktion, um aus den langen Spaltennamen kürzere Namen zu machen
def shorten_cause(name: str) -> str:
    if " that are from " in name:
        short = name.split(" that are from ")[-1]
    elif " that are due to " in name:
        short = name.split(" that are due to ")[-1]
    else:
        short = name
    return short.strip().capitalize()

df_cty_long["Cause_short"] = df_cty_long["Cause"].apply(shorten_cause)

print("\nLong-Format (erste Zeilen):")
display(df_cty_long.head())

print("\nDatentypen in df_cty_long:")
print(df_cty_long.dtypes)

# ============================================
# 4. Statistik der Rohdaten
# ============================================

# 4.1 Anzahl Datenpunkte pro Land
points_per_country = df_cty_long["Entity"].value_counts()
print("\nAnzahl Datenpunkte pro Land (Long-Format):\n")
print(points_per_country)

# Balkendiagramm Anzahl Datenpunkte pro Land
plt.figure(figsize=(6, 4))
plt.bar(points_per_country.index, points_per_country.values)
plt.title("Anzahl Datenpunkte pro Land (1990–2016)")
plt.xlabel("Land")
plt.ylabel("Anzahl Datenpunkte")
plt.tight_layout()
plt.show()

# 4.2 Fehlende Werte
print("\nFehlende Werte pro Spalte in df_cty_long:\n")
print(df_cty_long.isna().sum())

# 4.3 Beispiel-Verteilungen für eine Todesursache
# Wir nehmen einfach die erste vorhandene Todesursache im Datensatz
sample_cause = df_cty_long["Cause_short"].unique()[0]
print(f"\nBeispiel-Todesursache für Verteilungen: {sample_cause}")

tmp = df_cty_long[df_cty_long["Cause_short"] == sample_cause]

# Histogramm der Werte (beide Länder zusammen)
plt.figure(figsize=(8, 5))
plt.hist(tmp["Share_of_deaths"].dropna(), bins=15)
plt.title(f"Verteilung des Anteils an Todesfällen: {sample_cause}")
plt.xlabel("Anteil an allen Todesfällen (%)")
plt.ylabel("Anzahl Beobachtungen")
plt.tight_layout()
plt.show()

# Boxplot Schweiz vs. Türkei
plt.figure(figsize=(8, 5))
data_to_plot = [
    tmp[tmp["Entity"] == "Switzerland"]["Share_of_deaths"].dropna(),
    tmp[tmp["Entity"] == "Turkey"]["Share_of_deaths"].dropna(),
]
plt.boxplot(data_to_plot, labels=["Schweiz", "Türkei"])
plt.title(f"Boxplot der Anteile: {sample_cause}")
plt.ylabel("Anteil an allen Todesfällen (%)")
plt.tight_layout()
plt.show()

# ============================================
# 5. Analyse der Daten
# ============================================

# 5.1 Wichtigste Todesursachen (nach durchschnittlichem Anteil)
top_k = 5

mean_by_cause = (
    df_cty_long
    .groupby("Cause_short")["Share_of_deaths"]
    .mean()
    .sort_values(ascending=False)
)

top_causes = mean_by_cause.head(top_k).index.tolist()

print(f"\nTop {top_k} Todesursachen nach durchschnittlichem Anteil "
      f"(Schweiz & Türkei, 1990–2016):\n")
for c in top_causes:
    print(f"- {c}: {mean_by_cause[c]:.2f} %")

# Balkendiagramm der Top-Todesursachen
plt.figure(figsize=(9, 5))
plt.bar(top_causes, mean_by_cause.loc[top_causes])
plt.title("Durchschnittlicher Anteil an Todesfällen nach Ursache\n"
          "Schweiz & Türkei (1990–2016)")
plt.ylabel("Anteil an allen Todesfällen (%)")
plt.xticks(rotation=45, ha="right")
plt.tight_layout()
plt.show()

# 5.2 Zeitlicher Verlauf der wichtigsten Ursachen (Schweiz vs. Türkei)
for cause in top_causes:
    plt.figure(figsize=(9, 5))
    for country in countries_of_interest:
        tmp2 = (
            df_cty_long[
                (df_cty_long["Entity"] == country)
                & (df_cty_long["Cause_short"] == cause)
            ]
            .sort_values("Year")
        )
        plt.plot(
            tmp2["Year"],
            tmp2["Share_of_deaths"],
            marker="o",
            label=country,
        )

    plt.title(f"Entwicklung des Anteils an Todesfällen: {cause}")
    plt.xlabel("Jahr")
    plt.ylabel("Anteil an allen Todesfällen (%)")
    plt.legend()
    plt.tight_layout()
    plt.show()

print("\nAnalyse fertig ausgeführt.")
